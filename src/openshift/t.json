{
  "parameters": [
    {
      "name": "NAMESPACE",
      "displayName": "Namespace",
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "value": "openshift"
    },
    {
      "name": "SERVICE_NAME",
      "displayName": "Database Service Name",
      "description": "The name of the OpenShift Service exposed for the database.",
      "value": "access-control",
      "required": true
    },
    {
      "name": "SECRET_PATH",
      "value": "/etc/secret",
      "description": "Client secret volume path",
      "required": false
    },
    {
      "name": "POD_AFFINITY_TERM",
      "description": "required or preferred",
      "value": "preferred",
      "required": true
    }
  ],
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "access-control",
    "annotations": {
      "iconClass": "icon-agent",
      "tags": "dvv-control"
    }
  },
  "labels": {
    "template": "dvv-control"
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "access-control",
        "annotations": {
          "author": "Dobryvechir"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "tcp",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          },
          {
            "name": "monitoring",
            "protocol": "TCP",
            "port": 8081,
            "targetPort": 8081
          }
        ],
        "selector": {
          "name": "access-control"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "access-control",
        "labels": {
          "name": "access-control"
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "access-control"
        },
        "port": {
          "targetPort": "tcp"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "access-control-monitoring",
        "labels": {
          "name": "access-control-monitoring"
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "access-control"
        },
        "port": {
          "targetPort": "monitoring"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "access-control"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": "600",
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": "1",
        "selector": {
          "name": "access-control",
          "deploymentconfig": "access-control"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "access-control",
              "deploymentconfig": "access-control"
            },
            "annotations": {
              "prometheus.io/path": "/management/prometheus",
              "prometheus.io/port": "8081",
              "prometheus.io/scrape": "true",
              "scheduler.alpha.kubernetes.io/affinity": "{\"podAntiAffinity\": {\"preferredDuringSchedulingIgnoredDuringExecution\": [{\"weight\": 100, \"labelSelector\": {\"matchExpressions\": [{\"key\": \"name\", \"operator\": \"In\", \"values\": [ \"DV-control\" ] } ] }, \"topologyKey\": \"kubernetes.io/hostname\" } ] }}"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "client-credentials",
                "secret": {
                  "secretName": "access-control-client-credentials"
                }
              }
            ],
            "containers": [
              {
                "name": "access-control",
                "image": "http:\ddom.com:latest",
                "volumeMounts": [
                  {
                    "name": "client-credentials",
                    "mountPath": "/etc/secret",
                    "readOnly": true
                  }
                ],
                "livenessProbe": {
                  "tcpSocket": {
                    "port": 8080
                  },
                  "initialDelaySeconds":"90",
                  "timeoutSeconds": "5",
                  "periodSeconds": 15,
                  "successThreshold": 1,
                  "failureThreshold": "20"
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/management/health",
                    "port": 8081,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": "90",
                  "timeoutSeconds": "5",
                  "periodSeconds": 15,
                  "successThreshold": 1,
                  "failureThreshold": "5"
                },
                "env": [
                  {
                    "name": "OPENSHIFT_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "CLIENT_ID",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "registered-client-access-control",
                        "key": "client-id"
                      }
                    }
                  },
                  {
                    "name": "CLIENT_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "client-secret",
                        "name": "registered-client-access-control"
                      }
                    }
                  }
                ],
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8081,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "requests": {
                    "memory": "300Mi",
                    "cpu": "600m"
                  },
                  "limits": {
                    "memory": "1Gi",
                    "cpu": "1000m"
                  }
                },
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "access-control.monitoring-config",
        "labels" : {
          "app" : "access-control"
        }
      },
      "data": {
        "url.health": "http://%(ip)s:8081/management/health",
        "url.metrics": "http://%(ip)s:8081/management/metrics"
      }
    }
  ]
}